        android:id="@+id/start_workout_bt_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6139" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_workout_bt_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7587" />

    <ImageView
