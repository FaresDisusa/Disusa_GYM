        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1620" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_step_icon_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2778" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_step_icon_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4739" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_step_icon_h"
