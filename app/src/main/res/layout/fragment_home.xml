        android:id="@+id/muscle_pic_home"
        android:layout_width="@dimen/none"
        android:layout_height="@dimen/none"
        android:contentDescription="@string/muscle_man_home"
        app:layout_constraintBottom_toTopOf="@+id/end_pic_h"
        app:layout_constraintEnd_toEndOf="@+id/end_pic_v"
        app:layout_constraintStart_toStartOf="@+id/start_pic_v"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/muscle_pic_degrade"/>

    <!-- Steps background + bt -->
